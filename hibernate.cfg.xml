<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
 "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/demoapp_spring</property>
		<property name="connection.username">root</property>
		<property name="connection.password">Goat0817!</property>

		<property name="connection.pool_size">1</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="current_session_context_class">thread</property>
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="use_sql_comments">true</property>
		<mapping class="com.dhtmlx.demoapp" file="" jar="" package="hibernate.cfg.xml" resource="Event.hbm.xml" />
		<mapping class="com.dhtmlx.demoapp" file="" jar="" package="hibernate.cfg.xml" resource="EventRec.hbm.xml" />
		<mapping class="com.dhtmlx.demoapp" file="" jar="" package="hibernate.cfg.xml" resource="EventUnits.hbm.xml" />
		<mapping class="com.dhtmlx.demoapp" file="" jar="" package="hibernate.cfg.xml" resource="EventMap.hbm.xml" />

	</session-factory>
</hibernate-configuration>